#!/bin/sh
# needs to run as root of a UTS namespace to set hostname
# uses fake "systemctl"/"sendmail" programs to validate the output
set -u
M_O_F="${M_O_F:-"$PWD/out/build/bin/mail_on_failure"}"
trap 'rm -rf "$tmpdir"' EXIT INT
tmpdir="$(mktemp -d)/"

if [ $# -eq 0 ]
then
    read -r V < VERSION
else
    V="$1"
fi

cd test/m_o_f || exit
hostname tarta

PATH=".:$PATH"
err=0
for f in *.service; do
    of="${f%.service}.output"
    sed "s#@VERSION@#${V}#" < "$of" > "${tmpdir}$of"
    "$M_O_F" --verbose "$f" 2>&1 | diff -u "${tmpdir}$of" - || err=1
done
exit $err
